@using Ehome_BackEnd.ViewModels

@{
    ViewData["Title"] = "Checkout";
}

@model List<CheckOutVM>

<main>
        <section id="order">
            <div class="container">
                <div class="row">
                           <div class="col-lg-7">
                            <div class="orderhead d-flex justify-content-between">
                                <h6 class="text-muted">Payment</h6>
                                <div class="cardimage d-flex">
                                    <img style="width: 30px; height:30px;" src="~/assets/IMG/other-images/visa.png" alt="">
                                    <img style="width: 30px; height:30px;" src="~/assets/IMG/other-images/mastercard-logo.png" alt="">
                                    <img style="width: 30px; height:30px;" src="~/assets/IMG/other-images/maestro.png" alt="">
                                </div>
                            </div>
                            <form method="post">
                                <div class="orderinputs">
                                <label asp-for="First().Name" class="text-muted" for="">Ad:</label><br>
                                <input asp-for="First().Name" class="form-control" type="text" placeholder="Adınızı daxil edin...">
                                <span asp-validation-for="First().Name"></span>
                                <label asp-for="First().Surname" class="text-muted" for="">Soyad:</label><br>
                                <input asp-for="First().Surname" class="form-control" type="text" placeholder="Soyadınıxı daxil edin...">
                                <span asp-validation-for="First().Surname"></span>
                                <div asp-validation-summary="ModelOnly"></div>
                                <button class="mt-3" style="width: 100%;" type="submit"><a>Sifarişi tamamla</a></button>
                            </div>
                            </form>
                        </div>
                        <div class="col-lg-5">
                            @foreach (var item in Model)
                           {
                               <div class="order-about d-flex">
                                <div class="col-lg-4">
                                    <img style="width: 100%; height:60px" src="~/assets/IMG/furnitures/@item.Image" alt="">
                                </div>
                                <div class="col-lg-8 ms-2">
                                    <span>@item.Count x @item.SalePrice</span>
                                    <p class="text-muted">Miqdar:@item.Count</p>
                                </div>
                            </div>
                            <div class="orderchoose mt-2">
                                <input type="radio">
                                <span>Bank kart ilə ödəniş</span>
                                <p class="text-muted">İstənilən kredit və ya debet kartı ilə ödəniş edə bilərsiniz</p>
                                <input type="radio">
                                <span>BirKart ilə ödə</span>
                                <p class="text-muted">Bir kartla ödeme imkaninizda var</p>
                            </div>
                            <div class="ordersum d-flex justify-content-between mt-5">
                                <p>Cəmi:</p>
                                <span>@item.SalePrice AZN</span>
                            </div>
                           }
                        </div>
                </div>
            </div>
        </section>
    </main>

