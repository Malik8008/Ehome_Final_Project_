@using Ehome_BackEnd.Models
@model List<Setting>

@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive ">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Key
                </th>
                <th>
                    Value
                </th>
                 <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Setting setting in Model)
            {
                <tr>
                    <td>
                        @setting.Key
                    </td>
                    <td>
                        @setting.Value
                    </td>
                    <td>
                        <div class="d-flex">
                            <div class="detail">
                                <a asp-controller="setting" asp-action="Detail" asp-route-id="@setting.Id" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                            </div>
                            <div class="edit">
                                <a asp-controller="setting" asp-action="Edit" asp-route-id="@setting.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square" style="color:white;"></i>
                                    <i class="mdi mdi-tooltip-edit"></i>
                                </a>
                            </div>
                            <div class="delete">
                                <a asp-controller="setting" asp-action="Delete" asp-route-id="@setting.Id" class="btn btn-danger"> <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

