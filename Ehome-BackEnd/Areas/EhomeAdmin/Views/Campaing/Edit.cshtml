@using Ehome_BackEnd.Models
@model Campaing
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div>
        <label class="mb-3">Campaing Title:</label><br />
        <input asp-for="Title" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div>
        <label class="mb-3">Campaing Subtitle:</label><br />
        <input asp-for="Subtitle" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Subtitle"></span>
    </div>
    <div>
        <label class="mb-3">Campaing EndTime:</label><br />
        <input asp-for="EndTime" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="EndTime"></span>
    </div>
    <div>
        <label class="mb-3">Campaing Image:</label><br />
        <input asp-for="Photo" class="form-control" accept="Image/*"/><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit campaing</button>
    </div>
</form>

