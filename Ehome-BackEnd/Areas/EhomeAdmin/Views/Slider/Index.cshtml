@using Ehome_BackEnd.Models
@model List<Slider>

@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
     <a asp-controller="slider" asp-action="create" style="color:white;font-size:20px" class="mb-3 btn btn-success">Create slider object</a>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                 <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Slider slider in Model)
            {
                <tr>
                    <td>
                        <img style="width: 150px; height:95px" src="~/assets/IMG/slider-image/@slider.Image">
                    </td>
                    <td>
                        <div class="d-flex mt-4">
                            <div class="detail">
                                <a asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                            </div>
                            <div class="edit">
                                <a asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square" style="color:white;"></i>
                                    <i class="mdi mdi-tooltip-edit"></i>
                                </a>
                            </div>
                            <div class="delete">
                                <a asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger"> <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

