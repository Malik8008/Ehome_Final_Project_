@using Ehome_BackEnd.Models
@model Futniture
@{
    ViewData["Title"] = "Create";
}

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
            <label class="mb-1">Furniture Name:</label><br />
            <input asp-for="Name" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        </div>
        <div class="row">
            <div class="col-lg-3 form-check form-switch">
                <label class="form-check-label mb-3" for="flexSwitchCheckChecked">IsBestLike:</label>
                <input asp-for="IsBestLike" class="form-check-input ms-1" type="checkbox">
                <span asp-validation-for="IsBestLike" class="text-danger"></span>
            </div>
            <div class="col-lg-3 form-check form-switch">
                <label class="form-check-label mb-3" for="flexSwitchCheckChecked">IsBestSeller:</label>
                <input asp-for="IsBestSell" class="form-check-input ms-1" type="checkbox">
                <span asp-validation-for="IsBestSell" class="text-danger"></span>
            </div>
            <div class="col-lg-3 form-check form-switch">
                <label class="form-check-label mb-3" for="flexSwitchCheckChecked">IsSale:</label>
                <input asp-for="IsSale" class="form-check-input ms-1" type="checkbox">
                <span asp-validation-for="IsSale" class="text-danger"></span>
            </div>
            <div class="col-lg-3 form-check form-switch">
                <label class="form-check-label mb-3" for="flexSwitchCheckChecked">IsPopular:</label>
                <input asp-for="IsPopular" class="form-check-input ms-1" type="checkbox">
                <span asp-validation-for="IsPopular" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <label class="mb-3">CostPrice:</label><br />
                <input asp-for="CostPrice" class="form-control" /><br />
                <span class="text-danger" asp-validation-for="CostPrice"></span>
            </div>
            <div class="col-lg-3">
                <label class="mb-3">SalePrice:</label><br />
                <input asp-for="SalePrice" class="form-control" /><br />
                <span class="text-danger" asp-validation-for="SalePrice"></span>
            </div>
            <div class="col-lg-3">
                <label class="mb-3">Discount:</label><br />
                <input asp-for="Discount" class="form-control" /><br />
                <span class="text-danger" asp-validation-for="Discount"></span>
            </div>
            <div class="col-lg-3">
                <label class="mb-3">Count:</label><br />
                <input asp-for="Count" class="form-control" /><br />
                <span class="text-danger" asp-validation-for="Count"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <select asp-for=CategoryId class="form-select" asp-items="@(new SelectList(ViewBag.CategoryId,"Id","Name"))" aria-label="Default select example">
                    <option>Kategoriya seçin:</option>
                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                </select>
            </div>
            <div class="col-lg-3">
                <select asp-for=ColorId class="form-select" asp-items="@(new SelectList(ViewBag.ColorId,"Id","Name"))" aria-label="Default select example">
                    <option>Rəngi seçin:</option>
                    <span class="text-danger" asp-validation-for="ColorId"></span>
                </select>
            </div>
            <div class="col-lg-3">
                <select asp-for=MatrealId class="form-select" asp-items="@(new SelectList(ViewBag.MatrealId,"Id","Name"))" aria-label="Default select example">
                    <option>Matreal seçin:</option>
                    <span class="text-danger" asp-validation-for="MatrealId"></span>
                </select>
            </div>
            <div class="col-lg-3">
                <select asp-for=CountryId class="form-select" asp-items="@(new SelectList(ViewBag.CountryId,"Id","Name"))" aria-label="Default select example">
                    <option>Ölkə seçin:</option>
                    <span class="text-danger" asp-validation-for="CountryId"></span>
                </select>
            </div>
            <div class="col-lg-3 mt-3">
                <select asp-for=BrandId class="form-select" asp-items="@(new SelectList(ViewBag.BrandId,"Id","Name"))" aria-label="Default select example">
                    <option>Marka seçin:</option>
                    <span class="text-danger" asp-validation-for="BrandId"></span>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="mt-2 col-lg-6">
                <label class="mb-3">Main Image:</label><br />
                <input asp-for="MainImage" class="form-control" accept="Image/*" /><br />
                <span class="text-danger" asp-validation-for="MainImage"></span>
            </div>
            <div class="mt-2 col-lg-6">
                <label class="mb-3">Other Image:</label><br />
                <input asp-for="OtherImageFiles" class="form-control" accept="Image/*" /><br />
                <span class="text-danger" asp-validation-for="OtherImageFiles"></span>
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Create Furniture</button>
        </div>
    </div>
</form>
