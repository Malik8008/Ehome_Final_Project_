@using Ehome_BackEnd.Models
@model Category
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div>
        <label class="mb-3">Category Name:</label><br />
        <input asp-for="Name" class="form-control" accept="Image/*"/><br />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit Category</button>
    </div>
</form>

